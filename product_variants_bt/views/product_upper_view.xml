<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Upper-->
    <record id="view_product_upper_tree" model="ir.ui.view">
      <field name="name">product.upper.tree</field>
      <field name="model">product.upper</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Upper" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Upper-->
    <record id="action_product_upper" model="ir.actions.act_window">
      <field name="name">Upper</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.upper</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_upper_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Upper
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="upper_menu"
      name="Upper"
      parent="stock.menu_product_in_config_stock"
      sequence="36"
      action="product_variants_bt.action_product_upper"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>



