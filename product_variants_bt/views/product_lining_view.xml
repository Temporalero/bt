<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Lining-->
    <record id="view_product_lining_tree" model="ir.ui.view">
      <field name="name">product.lining.tree</field>
      <field name="model">product.lining</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Lining" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Lining-->
    <record id="action_product_lining" model="ir.actions.act_window">
      <field name="name">Lining</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.lining</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_lining_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Lining
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="lining_menu"
      name="Lining"
      parent="stock.menu_product_in_config_stock"
      sequence="35"
      action="product_variants_bt.action_product_lining"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
