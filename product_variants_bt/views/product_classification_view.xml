<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Classification-->
    <record id="view_product_family_tree" model="ir.ui.view">
      <field name="name">product.Classification.tree</field>
      <field name="model">product.classification</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Classification" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Family-->
    <record id="action_product_classification" model="ir.actions.act_window">
      <field name="name">Classification</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.classification</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_family_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Classification
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="classification_menu"
      name="Classification"
      parent="stock.menu_product_in_config_stock"
      sequence="33"
      action="product_variants_bt.action_product_classification"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>





