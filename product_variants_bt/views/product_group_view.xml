<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Group-->
    <record id="view_product_group_tree" model="ir.ui.view">
      <field name="name">product.group.tree</field>
      <field name="model">product.group</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Group" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Group-->
    <record id="action_product_group" model="ir.actions.act_window">
      <field name="name">Group Concept</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.group</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_group_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Group Concept
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="group_menu"
      name="Group Concept"
      parent="stock.menu_product_in_config_stock"
      sequence="37"
      action="product_variants_bt.action_product_group"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
