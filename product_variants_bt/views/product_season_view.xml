<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Season-->
    <record id="view_product_season_tree" model="ir.ui.view">
      <field name="name">product.season.tree</field>
      <field name="model">product.last</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Seasons" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Season-->
    <record id="action_product_season" model="ir.actions.act_window">
      <field name="name">Seasons</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.season</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_season_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Seasons
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="season_menu"
      name="Seasons"
      parent="stock.menu_product_in_config_stock"
      sequence="28"
      action="product_variants_bt.action_product_season"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>



