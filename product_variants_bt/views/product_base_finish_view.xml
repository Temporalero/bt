<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Base Finish-->
    <record id="view_product_base_finish_tree" model="ir.ui.view">
      <field name="name">product.base.finish.tree</field>
      <field name="model">product.base.finish</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Base Finish" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Base Finish-->
    <record id="action_product_base_finish" model="ir.actions.act_window">
      <field name="name">Base Finish</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.base.finish</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_base_finish_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Base Finish
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="base_finish_menu"
      name="Base Finish"
      parent="stock.menu_product_in_config_stock"
      sequence="31"
      action="product_variants_bt.action_product_base_finish"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
