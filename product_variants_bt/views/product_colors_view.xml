<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Colors-->
    <record id="view_product_color_tree" model="ir.ui.view">
      <field name="name">product.color.tree</field>
      <field name="model">product.color</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Colors" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Colors-->
    <record id="action_product_colors" model="ir.actions.act_window">
      <field name="name">Colors</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.color</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_color_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Colors
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="colors_menu"
      name="Colors"
      parent="stock.menu_product_in_config_stock"
      sequence="30"
      action="product_variants_bt.action_product_colors"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
