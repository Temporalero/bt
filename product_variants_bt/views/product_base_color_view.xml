<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Base Color-->
    <record id="view_product_base_color_tree" model="ir.ui.view">
      <field name="name">product.base.color.tree</field>
      <field name="model">product.base.color</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Base Color" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Base Color-->
    <record id="action_product_base_color" model="ir.actions.act_window">
      <field name="name">Base Color</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.base.color</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_base_color_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Base Color
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="base_color_menu"
      name="Base Color"
      parent="stock.menu_product_in_config_stock"
      sequence="40"
      action="product_variants_bt.action_product_base_color"
      groups="base.group_system,stock.group_stock_manager"
    />

  </data>
</odoo>
