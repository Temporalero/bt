<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--View Inherit Form of Product Template-->
    <record id="inherit_product_template_form_view" model="ir.ui.view">
      <field name="name">inherit.product.template.common.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <page name="general_information" position="after">
          <page name="addition_information" string="Additional Information">
            <group>
              <group>
                <field name="brand_id" placeholder="Select" />
                <field name="product_line" placeholder="Select" />
                <field name="group_id" placeholder="Select" />
                <field name="concept_id" placeholder="Select" />
                <!--<field name="family_id" placeholder="Select" />-->
                <field name="season_id" placeholder="Select" 
                  attrs="{'invisible': [('product_line', '=', 'perfumes')]}"  
                />
                <field name="style_id" string="Supplier Style" placeholder="Select"/>
                <field name="level_id" placeholder="Select" />
                <field name="upper_id" placeholder="Select"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
                <field name="lining_id" placeholder="Select"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
              </group>
              <group>
                <field name="stencil_id" placeholder="Select" string="Insole"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
                <field name="sole_id" placeholder="Select"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
                <field name="edge_color_id" placeholder="Select"
                  attrs="{
                    'invisible': [
                      '|','|',
                      ('product_line', '=', 'accessories'),
                      ('product_line', '=', 'perfumes'),
                      ('product_line', '=', 'clothing')
                    ]
                  }"  
                />
                  <!--('product_line', 'not in', ('purse', 'footwear')),-->
                <field name="logo_color" placeholder="Select"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
                <field name="height" placeholder="Select"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
                <field name="last_id" placeholder="Select"
                  attrs="{'invisible': [('product_line', '!=', 'footwear')]}"  
                />
                <field name="base_color_id" placeholder="Select" 
                  attrs="{
                    'invisible': [
                      ('product_line', '=', 'perfumes')
                    ]
                  }"  
                />
                <field name="base_color2_id" placeholder="Select"
                  attrs="{
                    'invisible': [
                      ('product_line', '=', 'perfumes')
                    ]
                  }"  
                />
                <field name="base_color3_id" placeholder="Select"
                  attrs="{
                    'invisible': [
                      ('product_line', '=', 'perfumes')
                    ]
                  }"  
                />
                <field name="base_finish_id" placeholder="Select"
                  attrs="{
                    'invisible': [
                      '|',
                      ('product_line', '=', 'perfumes'),
                      ('product_line', '=', 'clothing')
                    ]
                  }"  
                />
              </group>
            </group>
          </page>
        </page>
      </field>
    </record>

    <!--View Inherit search of Product Template-->
    <record id="inherit_product_template_search_view" model="ir.ui.view">
      <field name="name">inherit.product.template.search</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_search_view" />
      <field name="arch" type="xml">
        <field name="categ_id" position="after">
          <field name="brand_id"/>
        </field>

        <filter name="categ_id" position="after">
          <filter string="Product Make" name="brand_id" context="{'group_by': 'brand_id'}" />
        </filter>
      </field>
    </record>

  </data>
</odoo>
