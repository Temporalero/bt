<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Level-->
    <record id="view_product_level_tree" model="ir.ui.view">
      <field name="name">product.level.tree</field>
      <field name="model">product.level</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Level" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action nivel-->
    <record id="action_product_level" model="ir.actions.act_window">
      <field name="name">Level</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.level</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_level_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Level
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="level_menu"
      name="Level"
      parent="stock.menu_product_in_config_stock"
      sequence="33"
      action="product_variants_bt.action_product_level"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
