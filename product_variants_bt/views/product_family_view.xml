<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Family-->
    <record id="view_product_family_tree" model="ir.ui.view">
      <field name="name">product.family.tree</field>
      <field name="model">product.family</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Family" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--Action Family-->
    <record id="action_product_family" model="ir.actions.act_window">
      <field name="name">Family</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.family</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_family_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Family
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="family_menu"
      name="Family"
      parent="stock.menu_product_in_config_stock"
      sequence="32"
      action="product_variants_bt.action_product_family"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
