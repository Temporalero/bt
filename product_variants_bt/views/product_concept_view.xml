<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!--view tree of Concept-->
    <record id="view_product_concept_tree" model="ir.ui.view">
      <field name="name">product.concept.tree</field>
      <field name="model">product.concept</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Concept" editable="bottom">
          <field name="name"/>
          <field name="group_id" placeholder="Select"/>
        </tree>
      </field>
    </record>

    <!--Action Concept-->
    <record id="action_product_concept" model="ir.actions.act_window">
      <field name="name">Sub Group Concept</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.concept</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="product_variants_bt.view_product_concept_tree" />
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create New Sub Group Concept
        </p>
      </field>
    </record>

    <!--Menu-->
    <menuitem 
      id="concept_menu"
      name="Sub Group Concept"
      parent="stock.menu_product_in_config_stock"
      sequence="38"
      action="product_variants_bt.action_product_concept"
      groups="base.group_system,stock.group_stock_manager"
    />
  
  </data>
</odoo>
